#!/bin/sh
#
# starts dhcpd - the DHCP protocol daemon
# $Id: rc.dhcpd,v 1.10 2004/01/18 06:18:35 replikan Exp $
#

function start_dhcpd() {
    /usr/sbin/dhcpd
}

function stop_dhcpd() {
    killall dhcpd
}

case "$1" in
    'start')
	start_dhcpd
	;;
    'stop')
	stop_dhcpd
	;;
    'restart')
	stop_dhcpd
	sleep 1
	start_dhcpd
    *)
	echo "usage: $0 start|stop|restart"
	;;
esac
