#!/bin/sh

if [ "$1" = "NOSAVE" ]; then
    if [ "$ETCMODULESEXIST" = "yes" ]; then
	exit 0
    fi
fi

cat <<EOF > /etc/MODULES
#
# This file is autogenerated by \`setup.modules'.
# If you want to use the setup utility, it is meaningless to edit this file.
#
EOF

printenv | grep "RM_M_" | while read LINE
do
    MOD=`echo $LINE | cut -d_ -f2-`
    MOD=`echo $MOD | cut -d= -f1`
    MOD=`echo $MOD | cut -d_ -f2-`
    echo $MOD >> /etc/MODULES
done
